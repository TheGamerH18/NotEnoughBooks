@{
    ViewData["Title"] = "Add Book by ISBN";
}

<form asp-action="GetBookInfo" method="get">
    <div class="form-floating mb-3">
        <input name="query" id="query" class="form-control" aria-required="true" />
        <label for="query" class="form-label">Query</label>
    </div>
    <div>
        <button id="submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
    </div>
</form>

<button class="mt-2 btn btn-lg btn-secondary" onclick="OpenBinaryEye()">Open BinaryEye</button>

@section Scripts
{
    <script>
        function OpenBinaryEye(){
            window.open("binaryeye://scan?ret=@Context.Request.Scheme://@Context.Request.Host/Book/GetBookInfo?query={RESULT}")
        }
    </script>
}
