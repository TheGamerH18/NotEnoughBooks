@* </div> *@

@section Scripts {
    <script>
        const imagePathInput = $("#Book_ImagePath");
        
        function select(url) {
            imagePathInput.val(url);
            $("#ImageImg").attr("src", url);
        }
        
        imagePathInput.on("change", function () {
            const imageUrl = imagePathInput.val();
            $("#ImageImg").attr("src", imageUrl);
        })
    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
